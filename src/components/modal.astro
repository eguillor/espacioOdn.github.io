---
import type { ImageMetadata } from "astro";

interface Props {
  id: string;
  cardTitleModal: string;
  cardPreg1: string;
  cardRes1: string;
  cardPreg2: string;
  cardRes2: string;
  cardPreg3: string;
  cardRes3: string;
  cardPreg4: string;
  cardRes4: string;
}

const {
  id,
  cardTitleModal,
  cardPreg1,
  cardRes1,
  cardPreg2,
  cardRes2,
  cardPreg3,
  cardRes3,
  cardPreg4,
  cardRes4,
} = Astro.props;
---

<!-- Modal -->
<div
  class="modal fade"
  id={id}
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h3>{cardTitleModal}</h3>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row row-cols-1 row-cols-lg-2 g-2 g-lg-3">
          <div class="col d-flex align-content-stretch">
            <div class="card w-100">
              <div class="card-header">
                <h5>{cardPreg1}</h5>
              </div>
              <div class="card-body">
                <p class="ms-1">
                  {cardRes1}
                </p>
              </div>
            </div>
          </div>

          <div class="col d-flex align-content-stretch">
            <div class="card w-100">
              <div class="card-header">
                <h5>{cardPreg2}</h5>
              </div>
              <div class="card-body">
                <p class="ms-1">
                  {cardRes2}
                </p>
              </div>
            </div>
          </div>

          <div class="col d-flex align-content-stretch">
            <div class="card w-100">
              <div class="card-header">
                <h5>{cardPreg3}</h5>
              </div>
              <div class="card-body">
                <p class="ms-1">
                  {cardRes3}
                </p>
              </div>
            </div>
          </div>

          <div class="col d-flex align-content-stretch">
            <div class="card w-100">
              <div class="card-header">
                <h5>{cardPreg4}</h5>
              </div>
              <div class="card-body">
                <p class="ms-1">
                  {cardRes4}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="d-grid gap-2 col-12 col-lg-4 mx-auto">
          <a
            href="https://wa.me/5490889612468"
            target="_blank"
            class="btn btn-primary">QUIERO SABER M√ÅS</a
          >
        </div>
      </div>
    </div>
  </div>
</div>
