---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  id: string;
  cardImg: string;
  cardTitle: string;
  cardText: string;
}

const { id, cardImg, cardTitle, cardText } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/img/*.{jpeg,jpg,png,gif}",
);
if (!images[cardImg])
  throw new Error(
    `"${cardImg}" does not exist in glob: "/src/assets/img/*.{jpeg,jpg,png,gif}"`,
  );
---

<div class="col d-flex justify-content-center">
  <a
    href={id}
    class="text-decoration-none link-light"
    type="button"
    data-bs-toggle="modal"
    data-bs-target={id}
  >
    <div class="card card-trat shadow-lg card-overlay-bottom">
      <Image
        src={images[cardImg]()}
        class="card-img img-fluid"
        alt={cardTitle}
        loading="lazy"
      />
      <div class="mt-auto card-img-overlay d-flex align-items-end">
        <div class="mt-auto text-white">
          <h4 class="card-title">{cardTitle}</h4>
          <p class="card-text">{cardText}</p>
          <a
            href="/#"
            type="button"
            data-bs-toggle="modal"
            data-bs-target={id}
            class="btn btn-primary shadow mb-1 my-2">Ver mas</a
          >
        </div>
      </div>
    </div>
  </a>
</div>
