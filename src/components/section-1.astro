---
import bg from "../assets/img/bg.jpg";
import bg2 from "../assets/img/bg2.jpg";
import logo1 from "../assets/logo-1.png";
---

<section id="1" class="section-1 position-relative" data-scroll-spy>
  <div
    id="carouselExampleSlidesOnly"
    class="carousel slide"
    data-bs-ride="carousel"
  >
    <div class="carousel-inner z-n1 position-absolute">
      <div class="carousel-item active">
        <img src={bg.src} class="d-block w-100 opacity-75" alt="..." />
      </div>
      <div class="carousel-item">
        <img src={bg2.src} class="d-block w-100 opacity-75" alt="..." />
      </div>
    </div>
  </div>
  <div
    class="elementor-widget wow animate__animated animate__fadeIn animate__slow"
  >
    <img src={logo1.src} width="400" class="img-fluid" alt="" />

    <div
      class="mt-4 d-grid gap-2 d-md-flex flex-column flex-md-row justify-content-center"
    >
      <button class="btn btn-primary me-0 me-md-5 shadow" type="button"
        >TURNOS PROGRAMADOS <i class="bi bi-whatsapp ms-2"></i></button
      >
      <button class="btn btn-primary ms-0 ms-md-5 shadow" type="button"
        >URGENCIAS 24 HS <i class="bi bi-hospital ms-2"></i></button
      >
    </div>
  </div>

  <div class="shapeBottomAnimation"></div>
</section>
